		Form3->Meal[n].Protein->Width = 70;
		Form3->Meal[n].Protein->Font->Size = 10;

		Form3->Meal[n].Fat = new TLabel(Form3);
		Form3->Meal[n].Fat->Parent = Form3->Meal[n].Panel;
