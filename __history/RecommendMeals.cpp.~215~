	line4->Picture->Bitmap->Height = Form11->PanelH - 1;
	line4->Picture->Bitmap->Canvas->Brush->Color = clBlack;
	line4->Picture->Bitmap->Canvas->FillRect(Rect(0, 0, 2, 100));

