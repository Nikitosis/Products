	Form11->RecomMeal.push_back(TemporRecomMeal);
	int n = Form11->RecomMeal.size() - 1;

	Form11->RecomMeal[n].Panel = new TPanel(Form11);
	Form11->RecomMeal[n].Panel->Parent = Form11->ScrollBox1;
