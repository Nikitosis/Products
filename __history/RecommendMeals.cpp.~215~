	Form11->RecomMeal[n].Image->Left = 327;
	Form11->RecomMeal[n].Image->Height = Form11->PanelH - 1;
	Form11->RecomMeal[n].Image->Width = 125;
	Form11->RecomMeal[n].Image->Stretch = true;
