	line5->Parent = Form11->RecomMeal[n].Panel;
	line5->Left = 596;
	line5->Width = 2;
	line5->Height = Form11->PanelH - 1;
	line5->Picture->Bitmap->Width = 2;
	line5->Picture->Bitmap->Height = Form11->PanelH - 1;
